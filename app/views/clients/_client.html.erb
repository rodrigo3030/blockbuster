<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <% if client.movie.present? %>
      <td><%= client.movie.name %></td>
    <% else %>
      <td class="text-danger">Client has no movies</td>
    <% end %>        
    <td><%= link_to "Show this client", client, class: "btn btn-outline-success btn-sm" %></td>
    <td><%= link_to "Edit this client", edit_client_path(client), class: "btn btn-outline-warning btn-sm" %></td>
  </tr>
</div>
